<div class="container-1">
  <div class="banner" >
    <h1>Earl's Delicious Cocktails</h1>
    <p>Awesome beverages for everyone</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-secondary btn-lg" %>
  </div>
</div>

  <!-- Cocktails section -->
<div class="container-2">
  <h2 class="text-center">Cocktails on offer...</h2>
  <div class="row justify-content-around">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "...details", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>


